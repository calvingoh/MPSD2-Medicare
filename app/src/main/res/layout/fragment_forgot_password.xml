<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".auth.fragments.ForgotPasswordFragment"
    android:background="@color/colorPrimary">

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorColor="@color/white"
        android:indeterminate="true"
        app:indicatorSize="@dimen/_22sdp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        app:trackThickness="@dimen/_2sdp"
        />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_32sdp"
        android:fontFamily="@font/arima_madurai"
        android:text="@string/opps"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome"
        android:layout_marginStart="@dimen/_16sdp"
        android:fontFamily="@font/arima_madurai"
        android:text="@string/passwordf"
        android:textColor="@color/white" />


    <TextView
        android:id="@+id/emailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/back"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="48dp"
        android:text="@string/email"

        android:textColor="@color/white" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailText"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:fontFamily="@font/arima_madurai"
        android:textColor="@color/white"
        android:inputType="textEmailAddress" />


    <TextView
        android:id="@+id/clicking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_email"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_32sdp"
        android:fontFamily="@font/arima_madurai"
        android:text="By clicking on" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:textColor="@color/white"
        android:layout_below="@id/et_email"
        android:layout_marginTop="@dimen/_32sdp"
        android:layout_toRightOf="@id/clicking"
        android:id="@+id/send"
        android:fontFamily="@font/arima_madurai"

        android:layout_marginStart="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_email"
        android:layout_marginStart="4dp"
        android:layout_marginTop="@dimen/_32sdp"
        android:layout_toRightOf="@id/send"
        android:fontFamily="@font/arima_madurai"

        android:text="button" />


    <TextView
        android:id="@+id/e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/send"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_8sdp"

        android:fontFamily="@font/arima_madurai"
        android:text="An reset password email will send to your" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/send"
        android:layout_marginStart="4dp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_toRightOf="@id/e"

        android:fontFamily="@font/arima_madurai"
        android:text="Email."
        android:textColor="@color/white" />

    <Button
        android:id="@+id/sendBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:fontFamily="@font/arima_madurai"
        android:text="@string/send"
        android:backgroundTint="@color/white"
        android:textColor="@color/colorPrimary" />

</RelativeLayout>